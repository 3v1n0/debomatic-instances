[Unit]
Description=Automatic build machine for Debian source package
ConditionPathExists=/home/debomatic/config/debomatic.conf.%i

[Service]
Type=simple
ExecStart=/home/debomatic/debomatic/debomatic -c /home/debomatic/config/debomatic.conf.%i -n
ExecStop=/home/debomatic/debomatic/debomatic -c /home/debomatic/config/debomatic.conf.%i -q
KillMode=process
SendSIGKILL=no
TimeoutStopSec=0
Restart=on-failure

[Install]
WantedBy=multi-user.target
